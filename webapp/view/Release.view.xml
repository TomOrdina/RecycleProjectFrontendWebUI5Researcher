<mvc:View 
	controllerName="ResearcherApp.RecycleFrontEndResearcherApp.controller.Release"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	
	<Page id="floatingFooterPage" showHeader="false" floatingFooter="false">
		
		<Text text="items" class="sapUiSmallMargin header"/>
		<FlexBox
		justifyContent="Center"
		alignItems="Center"
		direction="Column">
			<Select id="mySelect" width="80vw"/>
			<Button text="{i18n>releaseButton}" width="80vw" press=".onPressRelease"/>
		</FlexBox>
	</Page>
	<mvc:XMLView viewName="ResearcherApp.RecycleFrontEndResearcherApp.view.Footer"/>
</mvc:View>