<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="ResearcherApp.RecycleFrontEndResearcherApp.controller.DetailPage-Item" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title">
				<content><Label text="data:"></Label>
					<Table id="specificItem" items="{path: '/Item'}" visible="hidden">
						<columns>
							<Column>
								<Label text="Correlation Asset Id"></Label>
							</Column>
							<Column>
								<Label text="Active"></Label>
							</Column>
							<Column>
								<Label text="Type Name"></Label>
							</Column>
							<Column>
								<Label text="Status"></Label>
							</Column>
							<Column>
								<Label text="Fist time entered in the water"></Label>
							</Column>
							<Column>
								<Label text="Physical ID"></Label>
							</Column>
						</columns>
						<ColumnListItem type="Active">
							<Text text="{correlationAssetId}"></Text>
							<Text text="{active}"></Text>
							<Text text="{type/Type_name}"></Text>
							<Text text="{status}"></Text>
							<Text text="{FirstWaterEntered}"></Text>
							<Text text="{type/physicalId}"></Text>
							
						</ColumnListItem>
					</Table>
					<Table id="specificItemDetail" items="{path: '/Item'}">
					<columns>
					<Column>
								<Label text="Location"></Label>
							</Column>
							<Column>
								<Label text="Time"></Label>
							</Column>
							
					</columns>
						<ColumnListItem type="Active">
								<Text text="{locations/0/latitude} °N {locations/0/longitude} °E"></Text>
							<Text text="{locations/0/timestamp}"></Text>
						</ColumnListItem>
						</Table>
						</content>
			</Page>
		</pages>
	</App>
</mvc:View>