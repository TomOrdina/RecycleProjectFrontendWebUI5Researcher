<mvc:View
	controllerName="ResearcherApp.RecycleFrontEndResearcherApp.controller.Profile" 
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page id="floatingFooterPage" showHeader="false" floatingFooter="false">
		<Text text="{i18n>headerProfile}" class="sapUiSmallMargin header"></Text>
		<VBox
			alignItems="Center"
			alignContent="Center">
			<items>
				<VBox class="card sapUiSmallMarginBottom">
					<items>
						<Text class="title" text="{i18n>nameProfile}"/>
						<Text class="content" text="{i18n>nameProfileValue}"/>
						<Text class="title" text="{i18n>roleProfile}"/>
						<Text class="content" text="{i18n>roleProfileValue}"/>
						<Text class="title" text="{i18n>permissionProfile}"/>
						<Text class="content" text="{i18n>permissionProfileValue}"/>
					</items>
				</VBox>
				<Button text="{i18n>profileButton}" width="80vw"/>
				<Link text="{i18n>profileChangePass}" class="sapUiSmallMarginTop underline"/>
			</items>
		</VBox>	
	</Page>
	<mvc:XMLView viewName="ResearcherApp.RecycleFrontEndResearcherApp.view.Footer"/>
</mvc:View>