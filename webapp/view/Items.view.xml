<mvc:View
	controllerName="ResearcherApp.RecycleFrontEndResearcherApp.controller.Items"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	
	<Page id="floatingFooterPage" showHeader="false" floatingFooter="false">
		
		<Text text="{i18n>itemsHeader}" class="sapUiSmallMargin header"/>
		<FlexBox
		height="75vh"
		justifyContent="End"
		alignItems="Center"
		direction="Column">
			<Button text="{i18n>releaseButton}" width="80vw" press=".onPress"/>
		</FlexBox>
	</Page>
	<mvc:XMLView viewName="ResearcherApp.RecycleFrontEndResearcherApp.view.Footer"/>
</mvc:View>